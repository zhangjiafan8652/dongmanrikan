<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <FrameLayout
        android:id="@+id/fl_tab_base_pager_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

        <RelativeLayout
            android:id="@+id/tv_wanmingjiazai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dip"
                android:layout_height="60dip"
                android:background="@anim/animationpao_list" />

            <TextView
                android:id="@+id/tv_wanmingjiazai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView1"
                android:text="玩命加载中。。。。"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_faillianjie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/im_lanpangzhi"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/lianjieshibai" />

            <TextView
                android:id="@+id/tv_wanmingjiazai2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/im_lanpangzhi"
                android:gravity="center"
                android:text="链接失败。。。请检查网络.点击蓝胖子重新链接"
                android:textSize="20sp" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout><!-- From: file:/J:/adt-bundle-windows-x86_64-20140702/workspace/dongman/res/layout/tab_base_pager.xml -->