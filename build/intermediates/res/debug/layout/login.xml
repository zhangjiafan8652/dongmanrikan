<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90D13A"
     >

    <ImageView
        android:id="@+id/ll_background_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" >
    </ImageView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#60ffffff"
            android:hint="	Username" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#60ffffff"
            android:inputType="textPassword"
            android:hint="	Password" />

        <Button
            android:id="@+id/but_login_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#60ffffff"
            android:gravity="center"
            android:text="signin"
            android:textColor="@color/logintextcolor"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/but_login_register"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
       android:background="#60ffffff"
        android:text="新注册"
        android:textColor="@color/logintextcolor"
        android:textSize="20dp" />

</RelativeLayout><!-- From: file:/J:/adt-bundle-windows-x86_64-20140702/workspace/dongman/res/layout/login.xml -->